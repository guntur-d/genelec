{
  "name": "mithril-fastify-vercel-boilerplate",
  "version": "1.0.0",
  "description": "A full-stack boilerplate with Mithril.js, Fastify, and MongoDB, ready for serverless deployment on Vercel.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=public/bundle.js --minify --sourcemap",
    "devel": "esbuild src/index.js --bundle --outfile=public/bundle.js --watch",
    "develop": "yarn devel"
  },
  "dependencies": {
    "@fastify/jwt": "^9.1.0",
    "@fastify/view": "^11.1.0",
    "@fingerprintjs/fingerprintjs": "^4.6.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.0.1",
    "fastify": "^5",
    "mithril": "^2.3.3",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.1",
    "nodemailer": "^7.0.5",
    "vercel": "^44.4.1"
  },
  "engines": {
    "node": ">=14.x"
  },
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.25.5"
  }
}
